<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    ################################################################-->

    <TextView
        android:id="@+id/label_coins"
        style="@style/Label_l"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        android:layout_width="@dimen/label_coins_width"
        android:layout_height="@dimen/label_coins_height"
        android:text="0" />

    <ImageView
        android:id="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/label_coins"
        app:layout_constraintEnd_toStartOf="@+id/label_coins"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/label_coins"
        app:layout_constraintTop_toTopOf="@+id/label_coins"
        app:layout_constraintVertical_bias="1.0"
        android:layout_width="@dimen/coin_width"
        android:layout_height="@dimen/coin_height"
        android:background="@drawable/coin" />

    <!--    ################################################################-->

    <Button
        android:id="@+id/btn_coins"
        app:layout_constraintBottom_toBottomOf="@+id/label_coins"
        app:layout_constraintEnd_toEndOf="@+id/label_coins"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/label_coins"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="@dimen/coin_btn_width"
        android:layout_height="@dimen/coin_btn_height"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/ic_plus"
        android:onClick="More_coins"
        android:paddingStart="@dimen/plus_size" />

</androidx.constraintlayout.widget.ConstraintLayout>